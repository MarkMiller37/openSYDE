/* --------------------------------------------------------------------- */
/*Scrollbar generic customization*/
QScrollBar:horizontal,
QScrollBar:vertical,
stw--opensyde_gui_elements--C_FlaOgeTebProgressLog QScrollBar:vertical
{
margin-top:0px;
margin-bottom:0px;
margin-right:0px;
margin-left:0px;
}

QScrollBar::sub-line,
QScrollBar::add-line
{
width:0px;
height:0px;
}

QScrollBar::add-page,
QScrollBar::sub-page,
QScrollBar::handle
{
border-width:1px;
border-style:solid;
border-radius:2px;
}

QScrollBar::sub-page
{
border-bottom-width:0px;
border-bottom-left-radius: 0px;
border-bottom-right-radius: 0px;
}

QScrollBar::add-page
{
border-top-width:0px;
border-top-left-radius: 0px;
border-top-right-radius: 0px;
}

QScrollBar::handle
{
min-height: 15px;
}

